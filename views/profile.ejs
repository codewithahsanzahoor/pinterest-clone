<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0"
		/>
		<title>Document</title>
		<link
			rel="stylesheet"
			href="../stylesheets/profile.css"
		/>
	</head>
	<body>
		<div id="algn">
			<div id="card">
				<div id="upper-bg">
					<img
						src="https://plus.unsplash.com/premium_photo-1661320832191-8e9866f34bc9?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTN8fGNvZGluZ3xlbnwwfHwwfHx8MA%3D%3D"
						alt="profile-pic"
						class="profile-pic"
					/>
				</div>
				<div id="lower-bg">
					<div class="text">
						<p class="name text-pink-400"><%=user.fullName%></p>
						<p class="title">
							<%=user.email%> & <br />
							<%=user.username%>
						</p>
					</div>
					<div id="icons">
						<a
							href="#"
							class="ico"
							><img
								width="48"
								height="48"
								src="https://img.icons8.com/color/48/gmail-new.png"
								alt="gmail-new"
						/></a>
						<a
							href="#"
							class="ico"
						>
							<img
								width="48"
								height="48"
								src="https://img.icons8.com/fluency/48/github.png"
								alt="github"
							/>
						</a>
						<a
							href="#"
							class="ico"
						>
							<img
								width="48"
								height="48"
								src="https://img.icons8.com/color/48/linkedin.png"
								alt="linkedin"
							/>
						</a>
						<a
							href="#"
							class="ico"
						>
							<img
								width="48"
								height="48"
								src="https://img.icons8.com/color/48/facebook-new.png"
								alt="facebook-new"
							/>
						</a>
					</div>
					<div id="btn">
						<!-- <button class="msg">Subscribe</button>
						<button class="msg">Message</button>
						<button class="msg">Account Settings</button> -->
						<a
							href="/logout"
							class="msg border rounded-3xl bg-red-700 text-white flex justify-center items-center px-2"
							>Log Out</a
						>
					</div>
					<div class="flex justify-center items-center">
						<form
							action="/upload"
							method="POST"
							enctype="multipart/form-data"
						>
							<input
								type="file"
								name="file"
							/>
							<input
								type="text"
								name="caption"
								placeholder="Add a caption..."
							/>
							<button type="submit">Upload</button>
						</form>
					</div>
					<div id="l-c-s">
						<div class="num">
							<img
								width="48"
								height="48"
								src="https://img.icons8.com/fluency-systems-regular/48/facebook-like--v1.png"
								alt="facebook-like--v1"
							/>
							<span>35k</span>
						</div>
						<div class="num dvr"></div>
						<div class="num">
							<img
								width="48"
								height="48"
								src="https://img.icons8.com/fluency-systems-regular/48/speech-bubble--v1.png"
								alt="speech-bubble--v1"
							/>
							<span>20k</span>
						</div>
						<div class="num dvr"></div>
						<div class="num">
							<img
								width="48"
								height="48"
								src="https://img.icons8.com/pulsar-line/48/share.png"
								alt="share"
							/>
							<span>15k</span>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="my-4">
			<div class="flex flex-wrap px-[20%] box-border">
				<% user.posts.forEach((post) => { %>
				<div class="w-full sm:w-1/2 md:w-1/3 flex flex-col p-3">
					<div
						class="bg-white rounded-lg shadow-lg overflow-hidden flex-1 flex flex-col"
					>
						<div
							class="bg-cover h-48"
							style="
								background-image: url('/images/uploads/<%= post.image %>');
							"
						></div>

						<div class="p-4 flex-1 flex flex-col">
							<h3 class="mb-4 text-2xl">
								created by <%= user.username %>
							</h3>
							<div class="mb-4 text-grey-darker text-sm flex-1">
								<p><%= post.imageText %></p>
							</div>
							<!-- <a
								href="#"
								class="border-t border-grey-light pt-2 text-xs text-grey hover:text-red uppercase no-underline tracking-wide"
								style=""
								>Twitter</a
							> -->
						</div>
					</div>
				</div>

				<% }) %>
			</div>
		</div>

		<script src="https://cdn.tailwindcss.com"></script>
	</body>
</html>
